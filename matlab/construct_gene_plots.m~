function construct_gene_plots(Path)

dl=filesep;

Sub=Path.Sub{:,1};
Case=struct('Num',{},'SeqPlate',{},'GeneName',{},'Date',{},'Cov',{});
AD=[Path.Main dl 'alignmentReports'];
mkdir(AD)
for i=1:length(Sub)
    FileName=[Path.Alignment dl Sub{i} dl 'alignments2.mat'];
    if exist(FileName, 'file')
        copyfile(FileName, [Path.Main dl 'alignmentReports' dl Sub{i} '.mat'])
        load(FileName, 'myCase')
        for fn = fieldnames(Case)'
           Case(i).(fn{1}) = myCase.(fn{1});
        end
    end
end

save([AD  dl 'all_alignments2_report.mat'], 'Case')








